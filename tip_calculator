# Function to calculate the tip based on the bill amount
def calculate_tip(bill):

# Using ternary operator to determine the tip percentage
    return bill * (0.15 if 50 <= bill <= 300 else 0.20)

# Example bill amount
bill_amount= 275 
tip = calculate_tip (bill_amount)
total = bill_amount + tip
print(f"The bill was $(bill_amount), the tip was $(tip:.2f), and the total value $(total:.2f)")
